<%= provide :title, '' %>
<%= provide :description, '' %>
<%= provide :keywords, '' %>
<%= provide :ld_json, {} %>

<%= render partial: 'shared/header' %>

<section id="hero">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-6">
          <div class='row'>
            <h1 class='bold title'>Encontre vagas<br> de emprego</h1>
            <p class='subtitle'>Confira gratuitamente as oportunidades de emprego <br>
            nas empresas clientes da <span class='bold'>Hirex</span></p>

            <div class='row'>
              <div class='col-md-8'>
                <%= form_for(:q, { url: searches_path, method: :get }) do |f| %>
                <div class='input-group'>
                  <%= f.text_field :term, class: 'form-control', required: 'required',
                  placeholder: 'Busque por nome da vaga ou empresa' %>

                  <div class='input-group-addon'>
                    <i class="fa-solid fa-magnifying-glass"></i>
                  </div>
                </div>
                <% end %>
              </div>
            </div>
            <br />

            <% if current_user && @search_histories then%>
              <% @search_histories.limit(4).each do |history| %>
                <span class='badge'>
                  <%= history.query %>
                  <i class="fa-regular fa-clock"></i>
                </span>
              <% end %>
            <% end %>
          </div>
        </div>

        <div class="col-md-6 text-center">
          <div class="jumbotron image">
            <i class="fa-regular fa-circle-play"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<search id="search-history">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h3 class='bold'>Você buscou recentemente</h3>
        <p>Oportunidades de acordo com o seu histórico de buscas:</p>
        <br>

        <div class='row'>
          <% (1..4).each do |company| %>
            <div class="col-md-3">
              <div class="panel panel-default">
                <div class="panel-body">
                  <h5>
                    <%= image_tag('', class: 'sm-logo', width: 28, height: 28) %>
                    Locaweb
                  </h5>
                  <h4  class='bold'>Software Engineer - Ruby</h4>
                  <ul class="list-unstyled list-inline">
                    <li><p>Não informado</p></li>
                    <li><p>Remoto</p></li>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</search>

<search id="highlight-companies">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h3 class='bold'>Empresas em Destaque</h3>
        <p>empresas que mais se destacam em nossa plataforma.</p>
        <br>

        <div class='row'>
          <% (1..6).each do |company| %>
            <div class="col-md-2">
              <div class="text-center">
                <%= image_tag('', class: 'logo', width: 80, height: 80) %>
                <h5 class='bold text-center'>Carrefour</h5>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</search>

<%= render partial: 'shared/footer' %>